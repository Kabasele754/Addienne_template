MDScreen:
    MDBottomNavigation:
        #panel_color: "#eeeaea"
        #selected_color_background: "#97ecf8"
        text_color_active: 0, 0, 0, 1

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Home'
            icon: 'home'
            badge_icon: "numeric-10"

            HomeScreen:

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Discord'
            icon: 'discord'
            badge_icon: "numeric-5"
            AddMessage:


        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'LinkedIN'
            icon: 'linkedin'

            MDLabel:
                text: 'LinkedIN'
                halign: 'center'

<HomeScreen>:
    md_bg_color: app.theme_cls.bg_light

    MDBoxLayout:
        orientation: "vertical"
        padding: "12dp", "56dp", "12dp", "12dp"
        spacing: "24dp"

        MDLabel:
            text: "All Blog"
            bold: True
            font_style: "H4"
            adaptive_height: True
            padding_x: "24dp"
            
        MyRecycleView:

<MainScreenView>:
    md_bg_color: app.theme_cls.bg_light

    MDBoxLayout:
        orientation: "vertical"
        padding: "12dp", "56dp", "12dp", "12dp"
        spacing: "24dp"

        MDLabel:
            text: "All Blog"
            bold: True
            font_style: "H4"
            adaptive_height: True
            padding_x: "24dp"

        ScrollView:

            MDList:
                
                padding: "24dp"
                spacing: "24dp"
                MyRecycleView:

<MyRecycleView>:
    #viewclass: 'BlogListItem'
    key_viewclass: "viewclass"
    scroll_type: ['bars', 'content']
    scroll_wheel_distance: dp(114)
    RecycleBoxLayout:
        #color: 1,1,1,1
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        hlign: "center"
        orientation: 'vertical'
        #default_size: None, (self.parent.height / 4 - dp(80)) if self.parent.height / 4 > dp(60) else dp(60)
        #default_size_hint: 1, None
        spacing: dp(20)
        padding: dp(20)


<BlogListItem>:
    description: self.description
    image_url: self.image
    title: self.title

    MDCard:
        #size_hint:(.6, .3)
        spacing: dp(20)
        #padding: dp(20)

        FitImage:
            size_hint_x: .2
            #size: self.texture_size   AsyncImage
            source:root.image_url #"assets/images/5BSS.png" 
            radius: 20
            #title: root.title
            mipmap: True

        BoxLayout:
            orientation:'vertical'
            spacing: dp(5)
            padding: dp(5)

            MDLabel:
                text: root.title
                color: 1, 0, 0, 1
                #theme_text_color: 'Secondary'
                #font_style:'title'
            MDSeparator:
                height: dp(3)
                spacing: dp(5)
                #pos_hint: {'center_x': 0.5,'center_y': 0.60}
            MDLabel:
            MDLabel:
                spacing: dp(5)
                text: root.description
                #pos_hint: {'center_x': 0.5,'center_y': 0.60}
                theme_text_color: 'Primary'


<AddMessage>:
    text_input_email: email
    text_input_password: password
    GridLayout:
        cols: 2 
        rows: 2
        TextInput:
            hint_text: "Name"
            id: email
            pos: root.center_x - 220, 300
            size: 400,50
        TextInput:
            hint_text: "Password"
            id: password
            pos: root.center_x - 10, 300
            size: 400,50
    Button:
        size: 130,40
        pos: root.center_x - 100, 200
        text: 'Connexion'
        on_release: root.submit_input()