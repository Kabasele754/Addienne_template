MDScreen:
    MDBottomNavigation:
        #panel_color: "#eeeaea"
        #selected_color_background: "#97ecf8"
        text_color_active: 0, 0, 0, 1

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Home'
            icon: 'home'
            badge_icon: "numeric-10"

            HomeScreen:

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Discord'
            icon: 'discord'
            badge_icon: "numeric-5"
            AddMessage:


        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'LinkedIN'
            icon: 'linkedin'

            MDLabel:
                text: 'LinkedIN'
                halign: 'center'

<HomeScreen>:
    md_bg_color: app.theme_cls.bg_light

    MDBoxLayout:
        orientation: "vertical"
        padding: "12dp", "56dp", "12dp", "12dp"
        spacing: "24dp"

        MDLabel:
            text: "All Blog"
            bold: True
            font_style: "H4"
            adaptive_height: True
            padding_x: "24dp"

            
            
        MyRecycleView:

<MainScreenView>:
    md_bg_color: app.theme_cls.bg_light

    MDBoxLayout:
        orientation: "vertical"
        padding: "12dp", "56dp", "12dp", "12dp"
        spacing: "24dp"

        MDLabel:
            text: "All Blog"
            bold: True
            font_style: "H4"
            adaptive_height: True
            padding_x: "24dp"

        ScrollView:

            MDList:
                
                padding: "24dp"
                spacing: "24dp"
                MyRecycleView:

<MyRecycleView>:
    #viewclass: 'BlogListItem'
    key_viewclass: "viewclass"
    scroll_type: ['bars', 'content']
    scroll_wheel_distance: dp(114)
    RecycleBoxLayout:
        #color: 1,1,1,1
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        hlign: "center"
        orientation: 'vertical'
        #default_size: None, (self.parent.height / 4 - dp(80)) if self.parent.height / 4 > dp(60) else dp(60)
        #default_size_hint: 1, None
        spacing: dp(20)
        padding: dp(20)

<HeroCard>
    orientation: "vertical"
    size_hint: 1, None
    height: "340dp"
    elevation: 8
    radius: 24
    padding: 12
    description: self.description
    image_url: self.image
    updated_time: ''
    playlist_name: self.playlist_name

    MDHeroFrom:
        id: hero_from
        tag: root.tag
        size_hint: 1, None
        height: root.height / 1.8

        FitImage:
            source: root.image_url
            size_hint: None, None
            pos_hint: {'center_x': 0.5,'center_y': 0.50}
            size: hero_from.size
            radius: 24

    MDLabel:
        text: root.playlist_name
        bold: True
        pos_hint: {'center_x': 0.5,'center_y': 0.30}
        adaptive_height: True
        padding: 12, 12
        font_style: "H5"

    MDLabel:
        padding: 12, 12
        pos_hint: {'center_x': 0.5,'center_y': 0.20}
        text: root.description




<BlogListItem>:
    id: card_id
    created_time: ''
    description: self.description
    id: ''
    image_url: self.image
    name: ''
    owner: ''
    updated_time: ''
    playlist_name: self.playlist_name
    #text_title: title

    MDCard:
        #size_hint:(.6, .3)
        spacing: dp(20)
        #padding: dp(20)

        FitImage:
            size_hint_x: .2
            #size: self.texture_size   AsyncImage
            source:root.image_url #"assets/images/5BSS.png" 
            radius: 24
            #title: root.title
            mipmap: True

        BoxLayout:
            orientation:'vertical'
            spacing: dp(5)
            padding: dp(5)

            MDLabel:
                text: root.playlist_name
                color: 1, 0, 0, 1
                #theme_text_color: 'Secondary'
                #font_style:'title'
            MDSeparator:
                height: dp(3)
                spacing: dp(5)
                #pos_hint: {'center_x': 0.5,'center_y': 0.60}
            MDLabel:
            MDLabel:
                spacing: dp(5)
                text: root.description
                #pos_hint: {'center_x': 0.5,'center_y': 0.60}
                theme_text_color: 'Primary'
           
            

<MovieItem@BoxLayout>
    MDCard:
        size_hint: 1, None
        elevation: 0

        BoxLayout:
            orientation: "vertical"

        AsyncImage:
            id: movie_imagesource: 
            size_hint: None, None
            #"https://resizing.flixster.com/brx5oftqBiMwdb4cbnpTEcJke3Y=/fit-in/200x296.2962962962963/v1.bTsxMTE3NjgxNTtqOzE4ODA0OzEyMDA7ODAwOzEyMDA"

        MDLabel:
            id: title
            text: "American Hustle"
            markup: True
            font_size: '12pt'
            bold: True
            adaptive_height: True

        MDLabel:
            id: synopsis
            text: " and the Mafia."
            markup: True
            font_size: '9pt'
            adaptive_height: True

        MDLabel:
            id: rt_rating
            text: "92%"
            markup: True
            font_size: '14pt'
            adaptive_height: True

        MDLabel:
            id: genre
            text: "Crime, Drama"
            font_size: '11pt'
            adaptive_height: True

        MDSeparator:
            height: dp(1)

<AddMessage>:
    text_input_email: email
    text_input_password: password
    GridLayout:
        cols: 2 
        rows: 2
        TextInput:
            hint_text: "Name"
            id: email
            pos: root.center_x - 220, 300
            size: 400,50
        TextInput:
            hint_text: "Password"
            id: password
            pos: root.center_x - 10, 300
            size: 400,50
    Button:
        size: 130,40
        pos: root.center_x - 100, 200
        text: 'Connexion'
        on_release: root.submit_input()